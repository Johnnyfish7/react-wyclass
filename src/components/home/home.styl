.class-home
  width: 100%
  height: 100%
  .container
    // position: fixed
    padding-bottom: 3rem
    width: 100%
    .home-tab
        height 1.85rem
        display flex
        flex-direction row
        align-items center
        color #868686
        margin 0
        padding 0
        list-style none
        .tab
            padding-left 1.42rem
            text-align center
    .slider-container
      height: 160px
      position: relative
      .slider-nav
        display: block
        width: 100%
        height: 100%
      .swiper-pagination-bullet-active
        background-color: #DDDDDD
    

.big
  .tag
    width 100%
    height 1.8rem
    color #333333
    text-align center
    font-size 0.5rem
    font-weight bold
    line-height 1.8rem
    border-top 1px solid #ececec
    .border
      border-bottom 1px solid #d8d8d8
  .title
    display flex
    flex-wrap: wrap
    width 9.75rem
    .small
      margin-left 0.5rem
      width 4.2rem
      height 4rem
      img 
        max-height 100%
        width auto
        height auto
        border-radius 4px
        max-width: 100%
      .text
        margin-top 0.2rem
        height 1.435rem
        width 4rem
        font-size 15px
